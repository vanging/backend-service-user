<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.vanging.backend.user">
    <class name="com.vanging.backend.user.models.Profile" table="profile">
        <id column="uid" name="uid" type="long">
            <generator class="foreign" />
        </id>
        <one-to-one name="uid" class="com.vanging.backend.user.models.Auth" constrained="true"/>

        <property name="email" column="email" not-null="true" type="java.lang.String" />
        <property name="verified" column="verified" not-null="true" type="boolean" />

        <property name="nickname" column="nickname" not-null="false" type="java.lang.String" />
        <property name="phone" column="phone" not-null="false" type="java.lang.String" />
    </class>
</hibernate-mapping>