<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.vanging.backend.user">
    <class name="com.vanging.backend.user.models.Auth" table="auth">
        <id name="uid" column="uid" type="long">
            <generator class="native">
            </generator>
        </id>

        <property name="username" column="username" not-null="false" unique="true" type="java.lang.String" />
        <property name="password" column="password" not-null="true" type="java.lang.String" />
    </class>
</hibernate-mapping>