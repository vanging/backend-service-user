<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.vanging.backend.user">
    <class name="com.vanging.backend.user.models.Auth" table="auth">
        <id name="uid" column="uid" type="long">
            <generator class="native" />
        </id>
        <one-to-one name="uid" class="com.vanging.backend.user.models.Profile" constrained="true" />
        <property name="password" column="password" type="java.lang.String" not-null="true" />
        <property name="username" column="username" not-null="false" type="java.lang.String" />
    </class>
</hibernate-mapping>